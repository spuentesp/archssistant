{
    "evaluar": [
        {
            "type": "any",
            "patterns": [
                "(necesito|busco|quiero|recomienda|sugiere|arquitectura para|proyecto|aplicación|app|sistema)"
            ]
        },
        {
            "type": "all",
            "patterns": [
                "(escalabilidad|mantenibilidad|costo|experiencia|seguridad|complejidad|tráfico|usuarios|datos|presupuesto)",
                "(alto|media|bajo|alta|medio|baja|pocos|muchos)"
            ]
        }
    ],
    "pregunta_general": [
        {
            "type": "any",
            "patterns": [
                "(qué es|explica|dime|define|significa|cómo funciona|cuáles son|ventajas|desventajas|diferencia|similitud|cuál.*mejor|versus|vs|compar(a|ación))"
            ]
        }
    ],
    "archivar": [
        {
            "type": "any",
            "patterns": [
                "(archivar|archivo|guarda|guardar|termina|terminar|finaliza|finalizar|nueva conversación|nueva conversacion|empezar de nuevo|comenzar de nuevo|limpiar|reset|reiniciar)"
            ]
        },
        {
            "type": "any",
            "patterns": [
                "(conversación|conversacion|chat|dialogo|diálogo|historial|sesión|sesion)"
            ]
        }
    ]
}
